<?php
function armstrong_number($number)
{
    $power_sum = 0;
    $check_up = $number;
    
    while ($check_up > 0) {
        $digit = $check_up % 10; // Get the last digit
        $power_sum += pow($digit, 3); // Add cube of the digit to the sum
        $check_up = intval($check_up / 10); // Remove the last digit
    }
    
    // Check if the sum of cubes is equal to the original number
    return $number == $power_sum;
}

if (armstrong_number(153)) {
    echo "The given number is an Armstrong number.";
} else {
    echo "The given number is not an Armstrong number.";
}
?>
